extends: default

rules:
  # Keep booleans strict (no yes/no/on/off)
  truthy:
    allowed-values: ['true', 'false']
    level: error

  # Cut the noise on spacing/newline nits
  empty-lines:
    max: 1
    max-end: 0
    level: warning

  # Spacing inside brackets like [main, master]
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
    level: error

  # Reasonable line length, warn only
  line-length:
    max: 160
    allow-non-breakable-words: true
    level: warning

  # Make YAML doc start optional (---)
  document-start: disable

  # Keep indentation consistent; sequences indented like mappings
  indentation:
    indent-sequences: consistent
