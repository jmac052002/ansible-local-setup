[Unit]
Description=Gunicorn for Flask app
After=network.target

[Service]
User={{ flask_app_user }}
Group={{ flask_app_user }}
WorkingDirectory={{ flask_app_dir }}
Environment="PATH={{ flask_app_dir }}/venv/bin"
ExecStart={{ flask_app_dir }}/venv/bin/gunicorn --workers 2 --bind 127.0.0.1:{{ flask_app_port }} wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
